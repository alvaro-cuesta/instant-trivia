.overlay {
  position: fixed;
  top: 0;
  left: 0;

  width: 100vw;
  height: 100vh;

  pointer-events: none;
}

.overlay > * {
  pointer-events: all;
}

.github-icon {
  position: absolute;
  bottom: 0;
  right: 0;

  width: 2.3em;
  height: 2.3em;
  margin: 0.5em;

  fill: var(--primary-color);
}

.github-icon:hover {
  fill: var(--highlight-color);
}

.github-icon:active {
  fill: var(--active-color);
}
